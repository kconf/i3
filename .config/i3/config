# back and forth
workspace_auto_back_and_forth yes
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth

# move the whole workspace to the next output
bindsym $mod+x move workspace to output right

# workspace layout
workspace $WS1 output DVI-I-0
workspace $WS2 output DP-0
workspace $WS3 output DVI-I-0
workspace $WS4 output DP-0
workspace $WS5 output DP-0
workspace $WS6 output DVI-I-0
workspace $WS7 output DVI-I-0
workspace $WS8 output DVI-I-0
workspace $WS9 output DVI-I-0
workspace $WS0 output DVI-I-0

# application shortcuts
bindsym $mod+F1                 exec gnome-calculator
bindsym $mod+F2 workspace $WS2; exec emacs
bindsym $mod+F3 workspace $WS3; exec google-chrome-stable
bindsym $mod+F4 workspace $WS4; exec android-studio
bindsym $mod+F6 workspace $WS6; exec zeal
bindsym $mod+F7 workspace $WS7; exec netease-cloud-music
